# Environment Configuration
ENVIRONMENT=production
PORT=8000
PYTHONUNBUFFERED=1

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/1

# API Configuration
SECRET_KEY=your-secret-key-here
API_KEY_SALT=random-salt-string

# Supabase (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# AI Services (optional)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Frontend
NEXT_PUBLIC_API_URL=https://your-api.railway.app

# Monitoring (optional)
SENTRY_DSN=https://...@sentry.io/...

# Feature Flags
ENABLE_CACHE=true
ENABLE_MONITORING=true
LOG_LEVEL=INFO

# NBA Data Collection
NBA_SEASONS=2022-23,2023-24,2024-25
UPDATE_HOUR=3  # 3 AM EST for daily updates
MIN_GAMES_FOR_PREDICTION=10  # Minimum games needed for reliable prediction
RATE_LIMIT_DELAY=0.6  # Delay between NBA API calls (seconds)

# Model Configuration
MODEL_VERSION=latest
MODEL_IMPROVEMENT_THRESHOLD=0.02  # 2% improvement required for redeployment
RETRAIN_SCHEDULE=weekly  # Options: daily, weekly, monthly

# Job Scheduling
ENABLE_SCHEDULED_JOBS=false  # Set to true in production
DAILY_UPDATE_CRON="0 3 * * *"  # 3 AM daily
WEEKLY_RETRAIN_CRON="0 4 * * 0"  # 4 AM Sunday