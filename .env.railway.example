# Database - MUST URL-encode password special characters!
# Example: password "pass@word!" becomes "pass%40word%21"
# Use scripts/fix_deployment.py to help encode your DATABASE_URL
DATABASE_URL=postgresql://postgres:%5BENCODED_PASSWORD%5D@db.xxxxxxxxxxxxxxxxxxxx.supabase.co:5432/postgres

# Optional but recommended for caching
REDIS_URL=redis://default:password@host:port

# Environment settings
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8080

# Supabase (optional)
SUPABASE_URL=https://xxxxxxxxxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Feature flags
ENABLE_MONITORING=true
ENABLE_CACHE=true

# API settings
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Model configuration
MODEL_PATH=/app/models
MODEL_VERSION=v2.1
ENABLE_GPU=false

# Monitoring (optional)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
PROMETHEUS_ENABLED=true

# External APIs (for future use)
NBA_API_KEY=your-nba-api-key
SPORTRADAR_API_KEY=your-sportradar-key